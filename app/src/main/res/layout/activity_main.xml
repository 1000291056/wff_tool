<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.wff.androidtool.component.activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/drawpathBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drawpathBtn"/>

            <Button
                android:id="@+id/openglBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="openglBtn"/>

            <Button
                android:id="@+id/testScrollerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="testScrollerBtn"/>

            <Button
                android:id="@+id/testProAnimator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="属性动画"/>

            <Button
                android:id="@+id/testPullView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉上拉"/>

            <Button
                android:id="@+id/openglBtnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="opengl"/>

            <Button
                android:id="@+id/testTransition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试Transition"/>

            <Button
                android:id="@+id/testrefresh_recycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试刷新refreshview"/>
            <Button
                android:id="@+id/test_touchevent_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="事件分发"/>
            <Button
                android:id="@+id/imageload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载图片"/>
            <Button
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="viewpager"/>
            <Button
                android:id="@+id/dragger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dragger2"/>
            <Button
                android:id="@+id/eventbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eventbus"/>
            <Button
                android:id="@+id/custom_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义LineLayout"/>
            <Button
                android:id="@+id/vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="矢量图及动画"/>
            <Button
                android:id="@+id/md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MaterialDesign"/>
            <Button
                android:id="@+id/test_custom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试自定义控件的一些方法"/>
            <TextView
                android:id="@+id/receiveMsgTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="输入信息"/>

                <Button
                    android:id="@+id/sendMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/pixel_processing_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
