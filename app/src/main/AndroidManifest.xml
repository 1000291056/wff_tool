<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wff.androidtool">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.wff.androidtool.component.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.wff.androidtool.component.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.wff.androidtool.component.activity.DrawPathActivity" />
        <activity android:name="com.wff.androidtool.component.activity.MyOpenGLActivity" />
        <activity android:name="com.wff.androidtool.component.activity.TestScrollerActivity" />

        <service android:name="com.wff.androidtool.socket.SocketService" />

        <activity android:name="com.wff.androidtool.component.activity.TestAnimatorActivity" />
        <activity android:name="com.wff.androidtool.component.activity.PullRefreshActivity" />
        <activity android:name="com.wff.androidtool.utils.OpenGLActivity" />
        <activity android:name="com.wff.androidtool.component.activity.TestTransitionActivity" />
        <activity android:name="com.wff.androidtool.component.activity.TestRefreshActivity" />
        <activity android:name="com.wff.androidtool.component.activity.TestTouchEventActivity" />
        <activity android:name="com.wff.androidtool.component.activity.ImageLoaderActivity" />
        <activity android:name="com.wff.androidtool.component.activity.ViewpagerActivity" />
        <!-- <activity android:name=".dragger.DraggerActivity" /> -->
        <!-- <activity android:name=".eventbus.EventBusActivity"/> -->
        <activity android:name="com.wff.androidtool.component.activity.CustomLinelayoutActivity" />
        <activity android:name="com.wff.androidtool.component.activity.VectorActivity" />
        <activity android:name="com.wff.androidtool.component.activity.NestedScrollViewActivity" />
        <activity
            android:name="com.wff.androidtool.component.activity.MaterialDesignActivity"
            android:label="@string/title_activity_material_design"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.wff.androidtool.component.activity.TestCustomViewActivity"></activity>
    </application>

</manifest>